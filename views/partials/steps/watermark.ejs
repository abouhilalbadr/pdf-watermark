<div class="stepper lg:px-12 py-8 hidden" data-step="2">
  <!-- Select Watermark type -->
  <div class="flex flex-wrap gap-6 mb-6">
    <button id="type-text" class="bg-white flex items-center my-2 rounded-lg cursor-pointer justify-evenly px-6 py-3 border-2 border-gray-200 btnType checked">
      <div class="dot h-5 w-5 bg-gray-200 rounded-full relative mr-2"></div>
      <span>Text Watermark</span>
    </button>
    <button id="type-image" class="bg-white flex items-center my-2 rounded-lg cursor-pointer justify-evenly px-6 py-3 border-2 border-gray-200 btnType">
      <div class="dot h-5 w-5 bg-gray-200 rounded-full relative mr-2"></div>
      <span>Image Watermark</span>
    </button>
  </div>
  <!-- Inputs For Type Text -->
  <div class="flex flex-col lg:flex-row flew-wrap">
    <div class="w-full lg:w-1/2">
      <div class="mb-2 lg:mr-2" id="watermark-text">
        <div class="relative mb-4">
          <label for="watermark-value" class="block mb-2 text-gray-400">
            Text
          </label>
          <textarea class="w-full bg-white border border-gray-400 rounded-lg p-2 h-24 focus:outline-none focus:border-gray-600" id="watermark-value" placeholder="Watermark text here..."></textarea>
        </div>
        <div class="flex flex-col lg:flex-row flex-wrap">
          <div class="w-full lg:w-2/4">
            <div class="mb-2 lg:mr-2">
              <label for="watermark-font" class="block mb-2 text-gray-400">
                Font
              </label>
              <select class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600" id="watermark-font">
                <option value="Helvetica">Helvetica</option>
                <option value="HelveticaBold">Helvetica Bold</option>
                <option value="HelveticaBoldOblique">Helvetica Bold Oblique</option>
                <option value="HelveticaOblique">Helvetica Oblique</option>
                <option value="Courier">Courier</option>
                <option value="CourierBold">Courier Bold</option>
                <option value="CourierBoldOblique">Courier Bold Oblique</option>
                <option value="CourierOblique">Courier Oblique</option>
                <option value="TimesRoman">TimesRoman</option>
                <option value="TimesRomanBold">TimesRoman Bold</option>
                <option value="TimesRomanBoldItalic">TimesRoman Bold Italic</option>
                <option value="TimesRomanItalic">TimesRoman Italic</option>
              </select>
            </div>
          </div>
          <div class="w-full lg:w-1/4">
            <div class="mb-2 lg:mx-2">
              <label for="watermark-size" class="block mb-2 text-gray-400">
                Font Size
              </label>
              <input type="number" id="watermark-size" class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600" placeholder="24" >
            </div>
          </div>
          <div class="w-full lg:w-1/4">
            <div class="mb-2 lg:ml-2">
              <label for="watermark-layout" class="block mb-2 text-gray-400">
                Color
              </label>
              <input type="color" id="watermark-color" class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600">
            </div>
          </div>
        </div>
      </div>
      <div class="mb-2 lg:mr-2 hidden" id="watermark-image">
        <div class="relative mb-4">
          <label for="watermark-img" class="block mb-2 text-gray-400">
            Image
          </label>
          <input type="file" id="watermark-img" accept="image/*">
        </div>
        <div class="my-6 text-center text-xl">
          OR
        </div>
        <div class="w-full">
          <label class="block mb-2 text-gray-400" for="img-url">Paste the web address of the image:</label>
          <input type="url" id="img-url" class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600 mt-2" placeholder="https://example.com/your-watermark.png">
        </div>
      </div>
    </div>
    <div class="w-full lg:w-1/2">
      <div class="mb-2 lg:ml-2">
        <div class="flex flex-col lg:flex-row flex-wrap">
          <div class="w-full lg:w-1/2">
            <div class="mb-6 lg:mr-2">
              <label for="watermark-rotation" class="block mb-2 text-gray-400">
                Rotate
              </label>
              <select class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600" id="watermark-rotation">
                <option value="0">Do note rotate</option>
                <option value="45">45 degrees</option>
                <option value="90">90 degrees</option>
                <option value="180">180 degrees</option>
                <option value="270">270 degrees</option>
                <option value="315">315 degrees</option>
              </select>
            </div>
          </div>
          <div class="w-full lg:w-1/2">
            <div class="mb-6 lg:ml-2">
              <label for="watermark-opacity" class="block mb-2 text-gray-400">
                Transparency
              </label>
              <select class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600" id="watermark-opacity">
                <option value="1">No transparency</option>
                <option value="0.75">75%</option>
                <option value="0.50">50%</option>
                <option value="0.25">25%</option>
              </select>
            </div>
          </div>
          <div class="w-full lg:w-1/2">
            <div class="lg:mr-2">
              <label for="watermark-layout" class="block mb-2 text-gray-400">
                Layout
              </label>
              <select class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600" id="watermark-layout">
                <option value="Above">Above the content</option>
                <option value="Below">Below the content</option>
              </select>
            </div>
          </div>
          <div class="w-full lg:w-1/2">
            <div class="lg:ml-2">
              <label for="watermark-position" class="block mb-2 text-gray-400">
                Position
              </label>
              <select class="w-full bg-white border border-gray-400 rounded-lg px-4 h-12 focus:outline-none focus:border-gray-600" id="watermark-position">
                <option value="TopLeft">Top-left</option>
                <option value="TopCenter">Top-center</option>
                <option value="TopRight">Top-right</option>
                <option value="LeftCenter">Left-center</option>
                <option value="Center">Center</option>
                <option value="RightCenter">Right-center</option>
                <option value="BottomLeft">Bottom-left</option>
                <option value="BottomCenter">Bottom-center</option>
                <option value="BottomRight">Bottom-right</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <p id="watermark-validation" class="hidden mt-8 px-4 py-2 rounded-lg text-sm text-red-400 bg-red-100">Please insert a valid Watermark</p>
</div>